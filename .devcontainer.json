{
  "image": "webis/tira-ir-starter-pyterrier:0.0.4-base",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter",
        "ms-toolsai.datawrangler"
      ]
    },
    "codespaces": {
      "openFiles":[
        "README.md"
      ]
    }
  },
  "mounts": ["source=${localWorkspaceFolder}/.tira,target=/root/.tira,type=bind"],
  "postCreateCommand": "pip install -r requirements.txt; python -m spacy download en_core_web_sm"
}
